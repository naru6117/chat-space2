.chat-main

    .chat-main__group-info
        .chat-main__group-info__info
            %p.chat-main__group-info__info-groupname 
                = group.name
            %p.chat-main__group-info__info-member
                Member:
                - group.users.each do |user|
                    = user.name
        .chat-main__group-info-edit
            = link_to 'Edit', edit_group_path(group.id),data: {"turbolinks" => false}


    .chat-main__message-list
        .message-list__box
            = render @messages
            
    .Footer
        = form_for  [@group, @message], html: {class: "Form"}, local: true do |f|
            .Form__contents
                = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
                = f.label :image, class: 'Form__inputImage' do
                    = icon('far', 'image', class: 'Form__icon')
                    = f.file_field :image, class: 'Hidden'
            = f.submit 'Send', class: 'Form__submit'
